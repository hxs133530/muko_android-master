<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.themukobeta.mukobeta.fragments.SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/mic_img"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/mic_bg"
            android:src="@drawable/bg_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/mic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/mic"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/action_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/mic_caption"
        android:layout_below="@+id/mic_img"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
